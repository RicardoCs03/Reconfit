<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Bienvenido a ReconFit"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_day_night_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detectando..."
        android:textSize="18sp"
        android:textStyle="italic"
        android:padding="8dp"
        android:background="#FFC107"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_message"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/tv_home_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí verás tu progreso diario, estadísticas resumidas de Hábitos y el estado de tus Zonas de Entrenamiento."
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_day_night_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_message">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard de Actividad (Próximamente)"
            android:gravity="center"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>