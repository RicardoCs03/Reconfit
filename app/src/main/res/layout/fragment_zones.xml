<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ZonesFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_zones_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Mis Zonas de Enfoque"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_zone_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Estado: Obteniendo Ubicaci贸n..."
        android:textSize="18sp"
        android:textStyle="italic"
        android:padding="12dp"
        android:gravity="center"
        android:background="#E0F7FA"
        app:layout_constraintTop_toBottomOf="@id/tv_zones_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_zone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nombre de la Ubicaci贸n ej. Gym"
        app:layout_constraintTop_toBottomOf="@id/tv_zone_status"
        app:layout_constraintBottom_toTopOf="@id/btn_save_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_save_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar Ubicaci贸n Actual como Nueva Zona"
        app:layout_constraintTop_toBottomOf="@id/et_zone_name"
        app:layout_constraintBottom_toTopOf="@id/rv_zones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_zones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_save_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_static_map"
        tools:listitem="@layout/item_zone" />

    <ImageView
        android:id="@+id/iv_static_map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rv_zones"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Mapa de ubicaci贸n actual" />

</androidx.constraintlayout.widget.ConstraintLayout>